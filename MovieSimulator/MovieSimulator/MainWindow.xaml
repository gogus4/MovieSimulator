<Window x:Class="MovieSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="Grid" Grid.Column="0">

        </Grid>
        
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button x:Name="UpdateSquare" Grid.Column="1" Content="Update" Height="20" VerticalAlignment="Top" Click="UpdateSquare_Click"/>
            <Button x:Name="UpdatePersonnage" Grid.Column="1" Content="Update personnage" Height="20" VerticalAlignment="Top" Click="UpdatePersonnage_Click" />
        </StackPanel>
    </Grid>
</Window>
