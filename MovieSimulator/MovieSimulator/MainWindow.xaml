<Window x:Class="MovieSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Tiles="clr-namespace:MovieSimulator.Common.Menu.TileMenu"
        Title="MainWindow" Height="650" Width="900" MinWidth="450" MinHeight="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.85*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" FontSize="80" Text="Movie Simulator" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Tiles:Menu x:Name="Tiles" Grid.Row="1" HorizontalAlignment="Center" MenuClick="Tiles_MenuClick" />
        
    </Grid>
</Window>
